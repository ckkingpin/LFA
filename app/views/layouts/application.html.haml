!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title LFA By T. Kanyepi
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    %link{href:'http://fonts.googleapis.com/css?family=Bangers', rel:'stylesheet', type:'text/css'}
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag '/ace/src-noconflict/ace', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    = render 'layouts/navbar'
    .container
      .row
        - flash.each do |name, msg|
          = content_tag :div, class: (name == "notice" ? "alert alert-dismissable alert-success" : "alert alert-dismissable alert-danger") do
            %button{type:"button", class:"close", "data-dismiss"=>"alert"} Ã—
            = msg
        = yield
    = render 'layouts/navbar_bottom'
